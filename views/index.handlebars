<h1>Eat-Da-Burger!</h1>


<div class="container">
    <div class="row">
        <div class="col-md-6" id="to-eat">
            <h2>To Eat!</h2>

            {{#each burgers}}
            {{#unless this.devoured}}
            <div class="available-burgers">
                <form action="/burgers/{{this.id}}?_method=PUT" method="POST" class="update-button">
                    {{this.burger_name}}
                    <button type="submit" class="btn- btn-default" id="burger-ready">DEVOUR IT</button>
                </form>
            </div>
            {{/unless}}
            {{/each}}

        </div>
        <div class="col-md-6">

            <div class="col" id="list-devoured">
                <h2 class="burger-title text-center">Burgers Devoured</h2>
                {{#each burgers}}
                {{#if this.devoured}}
                <div class="devoured-burgers">
                    {{this.burger_name}}
                </div>
                {{/if}}
                {{/each}}
            </div>

        </div>
    </div>
    <div class="row">
        <h2>Add a Burger</h2>
        <form id="add-burger" action="/burgers" class="create-form" method="POST">

            <div class="form-group">
                <label for="ca">Burger Name:</label>
                <input type="text" id="new-burger" name="burger_name">
            </div>


            <button type="submit">Add Burger</button>
            <p>Enter a buerger you want to eat. Click the "Add Burger" button.</p>
        </form>
    </div>
</div>